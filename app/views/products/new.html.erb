<h1>New Product</h1>

<!-- Use a Rails helper (form_for) to build form.  -->

<%= form_for @product do |f| %>
	<div>
		<%= f.label :title %> 
		<br>
		<%= f.text_field :title %>
	</div>

<div>
		<%= f.label :description %> 
		<br>
		<%= f.text_field :description %>
	</div>

	<div>
		<%= f.label :price %> 
		<br>
		<%= f.text_field :price %>
	</div>

	<div>
		<%= f.label :stock_quantity %> 
		<br>
		<%= f.text_field :stock_quantity %>
	</div>

	<div><%= f.submit "Create Product" %></div>

	<% end %>
