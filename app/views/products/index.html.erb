<h1>All Products</h1>

<p><%= link_to 'New Product', new_product_path %></p>

<% @products.each do |product| %>
<section>
	<h3><%= link_to product.title, product_path(product) %></h3>
	<!-- you can shorten product_path(product) to simply: product --> 
	<p><%= product.description %></p>
</section>
<% end %>